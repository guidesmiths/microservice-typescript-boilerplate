{
    "name": "guidesmiths-typescript-microservice-boilerplate",
    "version": "0.1.0",
    "description": "GuideSmiths TypeScript microservice boilerplate",
    "author": {
        "name": "GuideSmiths",
        "email": "hello@guidesmiths.com"
    },
    "main": "src/server.ts",
    "license": "MIT",
    "repository": {
        "url": "https://github.com/guidesmiths/microservice-typescript-boilerplate.git",
        "type": "git"
    },
    "engines": {
        "node": ">=12.18.2"
    },
    "scripts": {
        "build:dev": "webpack --config ./webpack/webpack.dev.js",
        "build:pro": "npm run manifest && webpack --config ./webpack/webpack.prod.js",
        "test": "npm run test:clearCache; jest --runInBand --watch",
        "test:noWatch": "npm run test:clearCache; jest --runInBand",
        "test:clearCache": "jest --clearCache",
        "manifest": "node_modules/make-manifest/bin/make-manifest"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged",
            "pre-push": "npm run test:noWatch"
        }
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.0",
        "@types/bunyan": "^1.8.6",
        "@types/debug": "^4.1.5",
        "@types/express": "^4.17.7",
        "@types/jest": "^26.0.10",
        "@types/node": "^14.6.0",
        "@types/supertest": "^2.0.10",
        "@types/swagger-ui-express": "^4.1.2",
        "@typescript-eslint/eslint-plugin": "^3.9.1",
        "@typescript-eslint/parser": "^3.9.1",
        "axios": "^0.21.1",
        "clean-webpack-plugin": "^3.0.0",
        "dotenv": "^8.2.0",
        "eslint": "^7.7.0",
        "eslint-config-airbnb-base": "^14.0.0",
        "eslint-config-airbnb-typescript": "^9.0.0",
        "eslint-plugin-import": "^2.22.0",
        "http-status-codes": "^1.4.0",
        "husky": "^4.2.5",
        "jest": "^26.4.2",
        "make-manifest": "^1.0.1",
        "nodemon-webpack-plugin": "^4.3.2",
        "prettier": "^2.0.5",
        "pretty-quick": "^2.0.2",
        "ts-jest": "^26.2.0",
        "ts-loader": "^8.0.2",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.6",
        "webpack": "^4.44.1",
        "webpack-cli": "^3.3.12",
        "webpack-merge": "^5.1.2",
        "webpack-node-externals": "^2.5.1"
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "bunyan": "^1.8.14",
        "debug": "^4.1.1",
        "express": "^4.17.1",
        "swagger-ui-express": "^4.1.4"
    }
}
